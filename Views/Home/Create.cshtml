
@model Sample_exam.ViewModels.Reservations.CreateVM
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Reservation";
}
<div class="container">
    <form action="/Home/Create" method="post">
        <div class="col-sm-10 form-group row">
            <label for="fullName" class="col-sm-2 col-form-label">Full name:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.FullName, "", new { placeholder = "Enter full name ", @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-10 form-group row">
            <label for="tableSize" class="col-sm-2 col-form-label">Table size:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.TableSize, "", new { placeholder = "Enter table size", @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-10 form-group row">
            <label for="dateTime" class="col-sm-2 col-form-label">Date size:</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.DateTime, "", new { @type = "date", placeholder = "Enter Date", @class = "form-control" })
            </div>
        </div>
        <div class="text-danger">@Html.ValidationMessage("TooMany")</div>
        <div class="row justify-content-md-center">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Save</button>
                <button class="btn btn-danger">Back</button>
            </div>
        </div>
    </form>
</div>
