
@using Sample_exam.Entities
@model Sample_exam.ViewModels.Reservations.IndexVM

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Reservations";
}

<a href="/Home/Create" type="button" class="btn btn-danger btn-lg btn-block">Add new reservations</a>

<table class="table table-striped table-dark">
    <thead>
    <th colspan="5" class="text-center">Reservations</th>
    <tr>
        <th scope="col">Full Name</th>
        <th scope="col">Table Size</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
        @foreach (Reservation item in Model.Items)
        {
            <tr>
                <th scope="row">@item.FullName</th>
                <td>@item.TableSize</td>
                <td>@item.DateTime.ToString("dd.MM.yyy")</td>
                <td>
                    <a href="/Home/Edit?id=@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Home/Delete?id=@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
